@model OnlineSchool2.Models.LessonViewModel
@{
    ViewData["Title"] = "Добавление урока";
}

<div class="container">
    <div class="row">
        <div class="col-12 pt-2 pb-2">
            <h1 class="text-center text-uppercase color1 pb-3">
                @ViewData["Title"]
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-9 container-fluid">
            <form asp-action="Create" asp-route-courseid="@Model.Course.Id" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Lesson.Title" class="control-label"><h5 class="color2">Название урока</h5></label>
                    <input asp-for="Lesson.Title" class="form-control" placeholder="Название..." />
                    <span asp-validation-for="Lesson.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Lesson.Description" class="control-label mt-3"><h5 class="color2">Описание</h5></label>
                    <textarea asp-for="Lesson.Description" class="form-control" rows="5" placeholder="Опишите новый урок..."></textarea>
                    <span asp-validation-for="Lesson.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Lesson.VideoLink" class="control-label mt-3"><h5 class="color2">Ссылка на видео для урока</h5></label>
                    <input asp-for="Lesson.VideoLink" class="form-control" placeholder="Ссылка..." />
                    <span asp-validation-for="Lesson.VideoLink" class="text-danger"></span>
                </div>

                <div class="container-fluid text-center mt-4 mb-5">
                    <div class="form-group">
                        <input type="submit" value="Создать" class="btn btn_itd text-uppercase text-center mx-3" />
                        <a asp-action="Index" asp-route-courseid="@Model.Course.Id" class="btn btn-sm btn_itd_outline text-uppercase text-center mx-3">К списку уроков</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
