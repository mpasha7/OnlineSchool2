@model OnlineSchool2.Models.Lesson

@{
    ViewData["Title"] = Model.Course.Title ?? "Not found course";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Урок: @Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Видео
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VideoLink)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" asp-route-courseid="@Model.Course.Id">Назад к списку уроков</a>
</div>
