@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="container">
    <div class="row">
        <div class="col-12 py-2">
            <h1 class="text-center text-uppercase color1 pb-3">
                @ViewData["Title"]
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-9 container-fluid">
            <form asp-action="Login" asp-controller="Account" method="POST">
                <div class="text-danger" asp-validation-summary="All"></div>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label asp-for="Name"><h5 class="color2">Имя</h5></label>
                    <input asp-for="Name" class="form-control" />
                    <div asp-validation-for="Name" class="text-danger"></div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Password"><h5 class="color2">Пароль</h5></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <div asp-validation-for="Password" class="text-danger"></div>
                </div>

                <div class="text-center mt-4 mb-5">
                    <div class="form-group">
                        <input type="submit" value="Войти" class="btn btn_itd text-uppercase text-center mx-3" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>