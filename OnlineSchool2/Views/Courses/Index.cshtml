@model IEnumerable<OnlineSchool2.Models.Course>

@{
    ViewData["Title"] = "Все курсы";
    string bg = "";
    int counter = 0;
}

<div class="col-12 text-center for_pattern pt-2 pb-4">
    <h1 class="text-center text-uppercase color2 pb-3">
        @ViewData["Title"]
    </h1>
    @if (ViewBag.IsCoach)
    {
        <a asp-action="Create" class="btn btn_itd text-uppercase text-center">Добавить курс</a>
    }
</div>

@foreach (var item in Model)
{    
    <section class="course_block back@(counter % 2)">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center pt-2 mb-3">
                    <a asp-controller="Lessons" asp-action="Index" asp-route-courseid="@item.Id" class="btn">
                        <h2 class="text-center text-uppercase color@((counter % 2) + 1)">@item.Title</h2>
                    </a>                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-7 col-sm-12">
                    <h5 class="color@((counter % 2) + 1)">@item.Description</h5>
                </div>
                <div class="col-md-5 col-sm-12">
                    <img src="@Url.Content(item.PhotoPath)" alt="Фото" class="img-fluid itd_img" />
                </div>
            </div>
            @if (ViewBag.IsCoach)
            {
                <div class="row mt-3">
                    <div class="col-12 text-center container-fluid">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn_itd_outline text-uppercase text-center mx-3">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn_itd_outline text-uppercase text-center mx-3">Удалить</a>
                    </div>
                </div>
            }
        </div>
    </section>
    counter++;
}

@if (ViewBag.IsCoach)
{
    <div class="col-12 text-center for_pattern py-5">
        <a asp-action="Create" class="btn btn_itd text-uppercase text-center">Добавить курс</a>
    </div>
}