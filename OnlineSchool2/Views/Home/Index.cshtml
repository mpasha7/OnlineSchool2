@model IEnumerable<OnlineSchool2.Models.Course>
@{
    ViewData["Title"] = "Главная";
    int counter = 0;
}

<section class="for_pattern pb-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-1 title_text color2 text-uppercase">Онлайн-школа</h1>
                <h2 class="display-3 title_text color2 text-uppercase">гимнастики</h2>
            </div>
        </div>
    </div>
</section>

<div class="container mb-5">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-md-6 col-sm-12 text-center mt-3">
                <a asp-controller="Home" asp-action="Course" asp-route-courseid="@item.Id" border="0" class="none_underline">
                    <div class="text-center itd_card">
                        <img src="@Url.Content(item.PhotoPath)" alt="Фото" class="img-fluid itd_home_img text-center" />
                        <h3 class="color1 text-uppercase text-center my-2">@item.Title</h3>
                        <h5 class="color1 mb-2">@item.ShortDescription</h5>
                    </div>
                </a>
            </div>
            counter++;
        }
    </div>
</div>
