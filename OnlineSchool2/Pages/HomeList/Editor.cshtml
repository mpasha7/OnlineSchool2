@page "{id}"
@model OnlineSchool2.Pages.HomeList.EditorModel
@{
    ViewData["Title"] = Model.Course.Title;
}

<div class="container">
    <h2 class="bg-primary text-center text-white p-1 mb-2">Переместить курс: @ViewData["Title"]</h2>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="CourseId" value="@Model.Course.Id" />

        <div class="form-group">
            <select asp-for="Choice" asp-items="@(new SelectList(new List<string> { "Перед", "После" }))" class="form-select">
            </select>
        </div>

        <div class="form-group my-3">
            <select asp-for="RelativeId" asp-items="@(new SelectList(Model.Courses, "Id", "Title"))" size="@Model.Courses.Count()" class="form-select">
            </select>
        </div>

        <div class="container-fluid text-center mt-4 mb-5">
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Переместить</button>
                <a class="btn btn-secondary" asp-page="List">Назад</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}