@page
@model OnlineSchool2.Pages.HomeList.ListModel
@{
    ViewData["Title"] = "Курсы";
}

<div class="container">
    <h2 class="bg-primary text-center text-white p-1 mb-2">@ViewData["Title"]</h2>

    <table class="table table-sm table-bordered my-3">
        <thead>
            <tr class="text-center">
                <th>ID</th>
                <th>Название</th>
                <th>Время создания</th>
                <th class="col-4"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Courses.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">Нет курсов</td>
                </tr>
            }
            else
            {
                foreach (Course course in Model.Courses)
                {
                    <tr class="cell_justify">
                        <td>@course.Id</td>
                        <td>@course.Title</td>
                        <td>@course.CreatedDate</td>
                        <td class="text-center">
                            <form asp-page="List" asp-page-handler="Delete" method="post">
                                <input type="hidden" name="Id" value="@course.Id" />
                                <a class="btn btn-sm btn-primary mx-2" asp-page="Editor" asp-route-id="@course.Id">Редактировать</a>
                                <button type="submit" class="btn btn-sm btn-danger mx-2">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>