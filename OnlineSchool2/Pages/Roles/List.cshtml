@page
@model OnlineSchool2.Pages.Roles.ListModel

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Представители</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Roles.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет ролей</td>
            </tr>
        }
        else
        {
            foreach (IdentityRole role in Model.Roles)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@(await Model.GetMembersString(role.Name))</td>
                    <td class="text-center">
                        <form asp-page="List" method="post">
                            <input type="hidden" name="Id" value="@role.Id" />
                            <a class="btn btn-sm btn-warning" asp-page="Editor" asp-route-id="@role.Id" asp-route-mode="edit">Редактировать</a>
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-page="Create">Создать</a>