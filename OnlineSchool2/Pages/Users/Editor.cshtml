@page "{id}"
@model OnlineSchool2.Pages.Users.EditorModel

<h5 class="bg-warning text-white text-center p-2">Редактирование пользователя</h5>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>ID</label>
        <input name="Id" class="form-control" value="@Model.Id" disabled />
        <input name="Id" type="hidden" value="@Model.Id" />
    </div>

    <div class="form-group">
        <label>Имя пользователя</label>
        <input name="UserName" class="form-control" value="@Model.UserName" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label>Новый пароль</label>
        <input type="password" name="Password" class="form-control" value="@Model.Password" />
    </div>

    <button type="submit" class="btn btn-warning">Сохранить</button>
    <a class="btn btn-secondary" asp-page="List">Назад</a>
</form>